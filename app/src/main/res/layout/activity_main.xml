<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic"
    tools:context="com.example.android.quizzicalapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome To QuizApp. "
            android:textColor="#000"
            android:textSize="20sp"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose A Category Below "
            android:textSize="30sp"
            android:textColor="#000"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="26dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="Let's Start!"
            android:textAlignment="center"
            android:textColor="#F2D7D5"
            android:textSize="50sp" />

    </LinearLayout>


    <Button
        android:id="@+id/scienceBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Science"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:textColor="#ffff"
        android:background="#84723097"
        android:layout_above="@+id/geographyBtn"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp" />

    <Button
        android:id="@+id/geographyBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Geography"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:textColor="#ffff"
        android:background="#84723097"
        android:layout_above="@+id/economicsBtn"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/economicsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#84723097"
        android:fontFamily="casual"
        android:text="Economics"
        android:textColor="#ffff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
